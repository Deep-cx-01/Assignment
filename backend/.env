# Server Configuration
PORT=5000                    # Port on which the server will run
NODE_ENV=development         # Environment mode (development/production)

# Database Configuration
DB_HOST=localhost           # PostgreSQL database host
DB_PORT=5432               # PostgreSQL port
DB_NAME=postgres      # Database name
DB_USER=postgres           # Database username
DB_PASSWORD=Root123       # Database password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here    # Secret key for JWT token generation
JWT_EXPIRES_IN=7d                      # JWT token expiration time

# CORS Configuration
CORS_ORIGIN=http://localhost:5173       # Frontend URL for CORS

# Database Pool Configuration (optional)
DB_POOL_MAX=5              # Maximum number of connections in pool
DB_POOL_MIN=0              # Minimum number of connections in pool
DB_POOL_ACQUIRE=30000      # Maximum time (ms) to acquire a connection
DB_POOL_IDLE=10000         # Maximum time (ms) a connection can be idle


POSTGRES_URI=postgres://postgres:Root123@localhost:5432/postgres
